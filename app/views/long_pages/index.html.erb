<p id="notice"><%= notice %></p>

<h1>Listing Long Pages</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th>number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @long_pages.each do |long_page| %>
      <tr>
        <td><%= long_page.title %></td>
      <td><%= long_page.body %></td>
      <td><%= long_page.number %></td>
        <td><%= link_to 'Show', long_page %></td>
        <td><%= link_to 'Edit', edit_long_page_path(long_page) %></td>
        <td><%= link_to 'Destroy', long_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @long_pages %>

<%= link_to 'New Long page', new_long_page_path %>
